<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <h1 class="d-flex justify-content-center">URL Shortener</h1>
    <a class="d-flex justify-content-center" href="/">
      <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png" alt="picture" style="width: 25%;">
    </a>
    <div class="mt-3 d-flex justify-content-center">
      {{#if shorten}}
      <div class="show-shorten-url">
        <h3>SuccessÔºÅPlease use this link:</h3>
        <input type="text" value="http://localhost:3000/{{shorten.shortenCode}}" id="shorten-url" style="width: 100%;" disabled>
        <div class="d-flex justify-content-center mt-3">
          <button class="btn btn-outline-primary" onclick="copyShortenUrl()">Copy</button>
        </div>
      </div>
      {{else}}
      <form method="POST" action="/">
        <div class="input-group mb-3" style="width: 700px;">
          <span class="input-group-text" id="basic-addon3">input your URL:</span>
          <input type="text" name="url" class="form-control" placeholder="https://example.com/users/..." id="basic-url" aria-describedby="basic-addon3" required>
        </div>
        <div class="d-flex justify-content-center">
          <button class="btn btn-outline-primary" type="submit">Shorten</button>
        </div>
      </form>
      {{/if}}
    </div>
  </div>
</div>